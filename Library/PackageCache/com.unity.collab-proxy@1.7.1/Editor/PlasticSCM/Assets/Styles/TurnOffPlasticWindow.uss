.parent-container {
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: stretch;
    align-content: stretch;
    padding: 19px 0;
    height: auto;
}

Button {
    cursor: link;
}

Label {
    white-space: normal;
}

#turnoff-label {
    width: 75%;
    left: 12.5%;
    margin-top: 20px;
	margin-bottom: 20px;
	font-size: 14px;
}

#progress-label {
    width: 300px;
	margin-left: 120px;
    margin-top: 40px;
	margin-bottom: 0px;
}

#turnoff-button {
    width: 50%;
    padding: 7px;
    border-width: 2px;
    border-radius: 0;
    height: 30px;
    left: 25%;
}
